@model IEnumerable<ReturnDetails>

@{
    ViewData["Title"] = "Returns Table";
    Layout = "_DashboardLayout";
}


        <table id="returns_table" class="table table-bordered table-sm">    
            <thead>
            <tr>
                <th scope="col">Return ID</th>
                <th scope="col">Date</th>
                <th scope="col">Product Name</th>
                <th scope="col">Customer Name</th>
                <th>Quantity </th>
                <th>Total Price</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td > @Html.DisplayFor(modelItem => item.ReturnID)</td>
                    <td > @item.DateReturned.ToShortDateString()</td>
                    <td > @Html.DisplayFor(modelItem => item.ProductName)</td>
                    <td > @item.User.FirstName @item.User.LastName</td>
                    <td > @item.ReturnQuantity </td>
                    <td> â‚±<span class="price">@item.TotalPrice</span></td>
                    <td>
                        <a class="btn btn-dark btn-sm" asp-action="Approve" asp-route-id="@item.ReturnID"> Approve </a>
                        <a class="btn btn-danger btn-sm" asp-action="Reject" asp-route-id="@item.ReturnID"> Archive </a>
                    </td>
                    
                </tr>
            }
            </tbody>
        </table>
