@model EdmanOnlineShop.ViewModels.RestockInventoryViewModel
@{
    ViewData["Title"] = "Add Product";
    Layout = "_DashboardLayout";
}

<h2 class="h2"> Restock Product </h2>
<div class="card text-left mt-4 mb-4" style="width: 50%;" >
    <div class="card-body">
        <form asp-action="RestockFinal" asp-route-id="@Model.InventoryID" class="row" method="post">

            <div class="col-md-12">


                <div class="form-group">
                    <label for="ProductName">Product Name</label>
                    <h5> @Model.ProductName </h5>
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <div class="form-row">
                        <div class="col">
                            <label for="Quantity">Quantity </label>

                            <input
                                type="number"
                                min="0"
                                class="form-control"
                                asp-for="Quantity"
                                placeholder="Quantity"/>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label for="Critical">Critical</label>

                            <input
                                type="number"
                                min="0"
                                class="form-control"
                                asp-for="Critical"
                                placeholder="Critical"/>
                            <span asp-validation-for="Critical" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <button type="submit" class="btn btn-primary btn-block">
                    Apply Changes
                </button>

            </div>
        </form>

    </div>
</div>
<environment include="Development">
    <script src="~/Identity/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/Identity/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</environment>