@using System.Security.Cryptography
@model EdmanOnlineShop.ViewModels.InventoryReportViewModel

@{
    ViewBag.Title = "Test";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="~/css/report.css">
</head>
<body>
<div class="container-fluid">
<div class="reports-header">
    <h5 class="mt-3 display-4" style="font-size: 30px;"> Inventory Reports </h5>
</div>
    <table class="table table-bordered table-sm mt-3">
        <thead>
        <tr>
            <th> Product ID  </th>
            <th> Inventory Date</th>
            <th> Product Name </th>
            <th> Product Category </th>
            <th> Quantity </th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Inventories.Count > 0)
        {
            foreach (var p in Model.Inventories)
            {
                <tr>
                    <td> @p.Product.ProductID </td>
                    <td> @p.Inventory.InventoryDate </td>
                    <td> @p.Product.ProductName </td>
                    <td> @p.Category.CategoryName </td>
                    <td> @p.Inventory.Quantity </td>
                </tr>
            }
        }
        </tbody>
    </table>
    <p class="small text-dark"> Generated: @DateTime.Now </p>
</div>

</body>
</html>