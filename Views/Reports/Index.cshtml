@using EdmanOnlineShop.ViewModels
@model EdmanOnlineShop.ViewModels.ReportsViewModel

@{
    ViewBag.Title = "Generate Reports";
    Layout = "_DashboardLayout";
}


<h2 class="h2">Generate Report</h2>

<div class="card w-50 mt-2">
    <div class="card-body">
        <form asp-action="GenerateReport" method="post">
            <div class="form-group">
                <label for="" class="mt-n1"> Report Type</label>
                <select asp-for="Report" id="select_report" class="form-control">
                    <option value="@Report.SALES"> Sales Report </option>
                    <option value="@Report.DELIVERY"> Delivery Report </option>
                    <option value="@Report.INVENTORY"> Inventory Report </option>
                    <option value="@Report.RETURN"> Return Report </option>
                    <option value="@Report.REQUEST"> Request Report </option>
                </select>
                <span asp-validation-for="Report" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col">
                        <label for=""> From Date </label>
                        <input asp-format="{0:yyyy-MM-dd}" id="from_date" type="date" asp-for="FromDate" class="form-control"/>
                    </div>
                    <div class="col">
                        <label for=""> To Date </label>
                        <input asp-format="{0:yyyy-MM-dd}" id="to_date" type="date" asp-for="ToDate" class="form-control"/>
                    </div>
                </div>
            </div>
            <input type="submit" class="btn btn-primary btn-block" value="Generate"/>  
        </form>

    </div>
</div>

<script >
    $("#select_report").change(function(){
       // console.log($(this).val());
       if($(this).val() === "INVENTORY"){
        $("#from_date").attr('disabled', 'disabled');
        $("#to_date").attr('disabled', 'disabled');
        console.log($(this).val());
       }else
           {
               $("#from_date").removeAttr('disabled');
               $("#to_date").removeAttr('disabled');
           }
    });
</script>