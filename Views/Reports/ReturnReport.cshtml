@using System.Security.Cryptography
@model EdmanOnlineShop.ViewModels.IndexReturnsViewModel

@{
    ViewBag.Title = "Test";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="~/css/report.css">
</head> 
<body>
<div class="container-fluid">
<div class="reports-header">
    <h5 class="mt-3 display-4" style="font-size: 30px;"> Return Reports </h5>
    <p class="py-2"> @Model.FromDate - @Model.ToDate </p>
</div>
    <table class="table table-bordered table-sm mt-2">
        <thead>
        <tr>
            <th> Return ID  </th>
            <th> Date Returned </th>
            <th> Customer Name </th>
            <th> Product Name </th>
            <th> Return Quantity </th>
            <th> Status </th>

        </tr>
        </thead>
        <tbody>
            @if (Model.Returns.Count > 0)
            {    
                foreach (var p in Model.Returns)
                {
                    <tr>
                        <td> @p.ReturnID</td>
                        <td> @p.DateReturned</td>
                        <td> @p.User.FirstName @p.User.LastName</td>
                        <td> @p.ProductName </td>
                        <td> @p.ReturnQuantity</td>
                        <td> @p.Status </td>

                    </tr>
                }
            }
        </tbody>
    </table>
    
        <p class="small text-dark"> Generated: @DateTime.Now </p>

</div>

</body>
</html>