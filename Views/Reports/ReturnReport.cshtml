@using System.Security.Cryptography
@model EdmanOnlineShop.ViewModels.SalesReportViewModel

@{
    ViewBag.Title = "Test";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="~/css/report.css">
</head> 
<body>
<div class="container-fluid">
<div class="reports-header">
    <h5 class="mt-3 display-4" style="font-size: 30px;"> Sales Reports </h5>
    <p class="py-2"> @Model.FromDate - @Model.ToDate </p>
</div>
    <table class="table table-bordered table-sm mt-2">
        <thead>
        <tr>
            <th> Order ID  </th>
            <th> Date Ordered</th>
            <th> Customer Name </th>
            <th> Product Name </th>
            <th> Quantity </th>
            <th> Unit Price </th>
            <th> Total Price  </th>
            <th> Payment Method </th>
        </tr>
        </thead>
        <tbody>
            @if (Model.Sales.Count > 0)
            {    
                foreach (var p in Model.Sales)
                {
                    <tr>
                        <td> @p.OrderID</td>
                        <td> @p.DateOrdered</td>
                        <td> @p.CustomerName</td>
                        <td> @p.ProductName </td>
                        <td> @p.Quantity </td>
                        <td> @p.Price </td>
                        <td> @p.TotalPrice </td>
                        <td> @p.PaymentMethod </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    
        <p class="small text-dark"> Generated: @DateTime.Now </p>

</div>

</body>
</html>