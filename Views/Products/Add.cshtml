@model EdmanOnlineShop.ViewModels.AddProductViewModel
@{
    ViewData["Title"] = "Add Product";
    Layout = "_DashboardLayout";
}

<h2 class="h2"> Add Product </h2>
<div class="card text-left mx-auto mt-2 mb-4" style="width: 100%;">
    <div class="card-body">
        <form asp-action="Add" class="row" enctype="multipart/form-data">
 
            <div class="col-md-6">
                @* <div asp-validation-summary="All" class="text-danger"></div> *@


                <div class="form-group">
                    <label for="ProductName">Product Name</label>
                    <input asp-for="ProductName" type="text" class="form-control" placeholder="Product Name"/>
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductDescription" for="exampleInputEmail1">Product Description</label>
                    <input asp-for="ProductDescription" type="text" class="form-control" placeholder="Product Description"/>
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>

                </div>
                

                <div class="form-group">
                    <div class="form-row">
                        <div class="col">
                                                <label for="Price">Price </label>

                            <input
                                type="text"
                                class="form-control"
                                asp-for="Price"
                                placeholder="Price (XX.XX)"/>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label> Category </label>
                            <select asp-for="CategoryID" class="form-control">
                                <option value=""> Select Category </option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.CategoryID"> @Html.DisplayFor(modelItem => category.CategoryName) </option>
                                }
                            </select>
                                                        <span asp-validation-for="CategoryID" class="text-danger"></span>

                        </div>
                    </div>

                </div>
                <button type="submit" class="btn btn-primary btn-block mt-3">
                    Add Product
                </button>

            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Upload Product Image</label>
                    <div class="input-group">
                        <span class="input-group-btn">
                            <span class="btn btn-primary btn-file">
                                Browseâ€¦ <input type="file" id="imgInp" name="ProductImage" asp-for="ProductImage">
                            </span>
                        </span>
                        <input type="text" class="form-control" readonly> <br>

                    </div>
                                            <span asp-validation-for="ProductImage" class="text-danger"></span>

                    <img id='img-upload'/>
                </div>
            </div>
        </form>

    </div>
</div>
<environment include="Development">
    <script src="~/Identity/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/Identity/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</environment>