@model EdmanOnlineShop.ViewModels.DeleteProductViewModel
@{
    ViewData["Title"] = "Add Product";
    Layout = "_DashboardLayout";
}

<h2 class="h2"> Edit Product </h2>
<div class="card text-left mx-auto mt-4 mb-4" style="width: 100%;">
    <div class="card-body">
        <h4> Are you sure you want to delete this? </h4>
        <p> @Model.ProductName </p>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" asp-route-id="@Model.ProductID">
                    <button type="submit" class="btn btn-danger"> Confrim Delete</button>
        </form>
    </div>
</div>
<environment include="Development">
    <script src="~/Identity/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/Identity/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</environment>